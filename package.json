{
  "name": "claude-session-manager",
  "description": "CLI tool for browsing, searching, and cleaning up local Claude Code sessions",
  "version": "1.0.0",
  "author": "sebryu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebryu/claude-session-manager"
  },
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "csm": "src/index.ts"
  },
  "scripts": {
